<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GitDroidTheme" parent="Theme.Sherlock.Light">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="ActionButton">
        <item name="android:paddingTop">0dip</item>
		<item name="android:paddingBottom">0dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">11pt</item>
		<item name="android:paddingLeft">32dip</item>
		<item name="android:gravity">center_vertical</item>
    </style>
    <style name="MenuList" parent="ActionButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:background">@drawable/menu_bg</item>
    </style>
    <style name="FormButton" parent="ActionButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:background">@drawable/button_green</item>
    </style>
    <style name="FormButtonContainer">
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center</item>
    </style>
    <style name="MainContainer">
        <item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:orientation">vertical</item>
    </style>
    <style name="ContentFragmentContainer" parent="MainContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">20dip</item>
    </style>
    <style name="MainTopBorder">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">15dip</item>
        <item name="android:background">@color/green</item>
    </style>
    <style name="SectionHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">11pt</item>
    </style>
    <style name="ContentList">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:divider">@color/grey</item>
        <item name="android:dividerHeight">2dip</item>
    </style>
    <style name="ContentListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">9pt</item>
    </style>
    <style name="ContentListItemHeadline" parent="ContentListItem">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ContentListItemLink" parent="ContentListItem">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="ContentListItemContainer">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dip</item>
    </style>
    <style name="AvatarView">
        <item name="android:layout_width">50dip</item>
	    <item name="android:layout_height">50dip</item>
	    <item name="android:paddingRight">10dip</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">@color/green</item>
    </style>
</resources>